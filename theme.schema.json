{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/pekdon/pekwm-theme-registry/theme.schema.json",
    "title": "pekwm theme",
    "description": "A pekwm theme in the pekwm theme registry",
    "type": "object",
    "properties": {
        "registry-version": {
            "description": "Registry format version",
            "type": "integer",
            "const": 1
        },
        "author": {
            "description": "Theme author",
            "type": "string"
        },
        "name": {
            "description": "Theme name",
            "type": "string",
            "pattern": "^[a-zA-Z0-9][a-zA-Z0-9_-]*$"
        },
        "title": {
            "description": "Theme title, used in theme listing",
            "type": "string",
            "maxLength": 79
        },
        "description": {
            "description": "Theme description",
            "type": "string"
        },
        "homepage": {
            "description": "Theme homepage",
            "format": "uri"
        },
        "source": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["git", "http"]
                },
                "git": {
                    "type": "object",
                    "properties": {
                        "remote": {
                            "type": "string",
                            "format": "uri"
                        },
                        "branch": {
                            "type": "string"
                        }
                    },
                    "required": ["remote", "branch"]
                },
                "http": {
                    "type": "object",
                    "properties": {
                        "url": {
                            "type": "string",
                            "format": "uri"
                        }
                    },
                    "required": ["url"]
                }
            },
            "required": ["type"]
        }
    },
    "required": ["registry-version",
                 "author",
                 "name",
                 "title",
                 "source"]
}
